<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xoxoproject.example.mapper.CommentMapper">

	<select id="commentCount" resultType="int">
        SELECT
            COUNT(*)
        FROM COMMENT
    </select>
    
    <select id="commentList" resultType="Comment">
        SELECT
            *
        FROM COMMENT
    </select>
    
    
    <insert id="commentInsert" parameterType="Comment">
        INSERT INTO
        COMMENT (cm_num, board_num, cm_text, cm_writer)
        VALUES(#{cm_num},#{board_num},#{cm_text},#{cm_writer}) 
    </insert>
    
    <update id="commentUpdate" parameterType="Comment">
        UPDATE COMMENT
            SET
            CONTENT = #{content}
        WHERE CNO = #{cno}
    </update>
    
    <delete id="commentDelete" parameterType="int">
        DELETE FROM COMMENT WHERE CNO = #{cno}
    </delete>

</mapper>